<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Blue-Jay Web App</display-name>

  <servlet>
    <servlet-name>main-servlet</servlet-name>
    <servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
    <init-param>
      <param-name>javax.ws.rs.Application</param-name>
      <param-value>com.bluejay.server.logic.ControlConfig</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
  
  <resource-env-ref>
    <description>DB connection facade</description>
    <resource-env-ref-name>bean/bluejay-db-facade</resource-env-ref-name>
    <resource-env-ref-type>com.bluejay.server.db.DatabaseFacade</resource-env-ref-type>
  </resource-env-ref>
  <resource-ref>
      <description>DB Connection</description>
      <res-ref-name>jdbc/bluejay-db</res-ref-name>
      <res-type>javax.sql.DataSource</res-type>
      <res-auth>Container</res-auth>
  </resource-ref>
</web-app>
